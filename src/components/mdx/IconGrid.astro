---
import { Icon } from "astro-icon/components";

interface Props {
  color: "primary" | "secondary" | "tertiary";
  icons: {
    name: string;
    url: string;
    title?: string;
  }[];
}

const { icons, color = "primary" } = Astro.props as Props;
---

<div class="flex justify-center w-full">
  <div
    class="overflow-x-scroll inline-flex gap-4 w-full md:w-10/12 lg:w-8/12 xl:w-1/3 justify-between text-slate-600 py-8 px-4"
  >
    {
      icons.map((icon) => (
        <div class="flex flex-col gap-2">
          <div class="flex justify-center items-center">
            <div
              class:list={{
                "bg-linear-to-b from-primary-200 to-primary-300 border-1 border-primary-400 text-primary-600":
                  color === "primary",
                "bg-linear-to-b from-secondary-200 to-secondary-300 border-1 border-secondary-400 text-secondary-600":
                  color === "secondary",
                "bg-linear-to-b from-tertiary-200 to-tertiary-300 border-1 border-tertiary-400 text-tertiary-600":
                  color === "tertiary",
              }}
              class="text-xl md:text-3xl flex justify-center items-center rounded-full p-4 shadow-md"
            >
              <Icon name={icon.name} />
            </div>
          </div>
          {icon.title && (
            <div
              class:list={{
                "text-primary-600": color === "primary",
                "text-secondary-600": color === "secondary",
                "text-tertiary-600": color === "tertiary",
              }}
              class="text-center uppercase text-lg font-heading font-bold"
            >
              {icon.title}
            </div>
          )}
        </div>
      ))
    }
  </div>
</div>
