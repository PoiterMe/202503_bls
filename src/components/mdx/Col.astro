---
interface Props {
  shadow?: boolean;
  text?: "center" | "left" | "right";
  color?: "primary" | "secondary" | "tertiary" | "white" | "transparent";
  tablet?:
    | "1/2"
    | "1/3"
    | "2/3"
    | "1/4"
    | "3/4"
    | "1/5"
    | "2/5"
    | "3/5"
    | "4/5"
    | "";
  desktop?:
    | "1/2"
    | "1/3"
    | "2/3"
    | "1/4"
    | "3/4"
    | "1/5"
    | "2/5"
    | "3/5"
    | "4/5"
    | "";
}

const {
  tablet = "",
  desktop = "",
  text = "left",
  color = "transparent",
  shadow = false,
} = Astro.props as Props;
---

<div
  class:list={[
    "flex items-stretch mb-4 px-2 w-full",
    { "md:w-1/2": tablet === "1/2" },
    { "md:w-1/3": tablet === "1/3" },
    { "md:w-2/3": tablet === "2/3" },
    { "md:w-1/4": tablet === "1/4" },
    { "md:w-3/4": tablet === "3/4" },
    { "md:w-1/5": tablet === "1/5" },
    { "md:w-2/5": tablet === "2/5" },
    { "md:w-3/5": tablet === "3/5" },
    { "md:w-4/5": tablet === "4/5" },
    { "lg:w-1/2": desktop === "1/2" },
    { "lg:w-1/3": desktop === "1/3" },
    { "lg:w-2/3": desktop === "2/3" },
    { "lg:w-1/4": desktop === "1/4" },
    { "lg:w-3/4": desktop === "3/4" },
    { "lg:w-1/5": desktop === "1/5" },
    { "lg:w-2/5": desktop === "2/5" },
    { "lg:w-3/5": desktop === "3/5" },
    { "lg:w-4/5": desktop === "4/5" },
    { "text-center": text === "center" },
    { "text-left": text === "left" },
    { "text-right": text === "right" },
  ]}
>
  <div
    class="w-full md:rounded-sm"
    class:list={[
      { "bg-primary-300 text-primary-900": color === "primary" },
      { "bg-secondary-300 text-secondary-900": color === "secondary" },
      { "bg-tertiary-300 text-tertiary-900": color === "tertiary" },
      { "bg-white": color === "white" },
      { "bg-transparent": color === "transparent" },
      { "shadow-md": shadow },
    ]}
  >
    <div class:list={[{ "p-4": color != "transparent" }]}>
      <slot />
    </div>
  </div>
</div>
